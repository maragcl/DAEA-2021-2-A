@model Products
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18"><i class="fas fa-table"></i> Agregar Producto</h4>
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-horizontal">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Nombre</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProductName)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="Description" class="col-form-label col-md-2">Proveedor ID</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.SupplierID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SupplierID)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Categoria ID</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CategoryID)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Cantidad X Unidad</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.QuantityPerUnit, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.QuantityPerUnit)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Precio Unitario</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UnitPrice)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Stock</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.UnitsInStock, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UnitsInStock)
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="ProductName" class="col-form-label col-md-2" style="color:black">Unidades ordenadas</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.UnitsOnOrder, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UnitsOnOrder)
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-sm btn-primary" /> |
                            <!---<div class="btn btn-sm btn-danger">@*Html.ActionLink("Cancelar", "Index")*@</div>-->
                            <a class="btn btn-sm btn-danger" style="text-decoration: none" href="~/Products">Cancelar</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

